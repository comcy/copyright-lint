{
    "extends": "@tsconfig/node14/tsconfig.json",
  
    "compilerOptions": {
      "outDir": "./dist",
      "module": "esnext",
      "declaration": true,
      "declarationDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": [
        "es2020",
        "dom"
      ],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/tests", "**/*.test.ts"]
  }